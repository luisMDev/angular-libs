{
  "name": "@luismdev/ngx-utils",
  "version": "1.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build:error-handler": "ng build ngx-error-handler",
    "build:utils": "ng build ngx-utils",
    "build:fire": "ng build ngx-fire",
    "publish:error-handler": "ng build ngx-error-handler && cd dist/ngx-error-handler && npm publish --access public",
    "publish:fire": "ng build ngx-fire && cd dist/ngx-fire && npm publish --access public",
    "publish:utils": "ng build ngx-utils && cd dist/ngx-utils && npm publish --access public",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lint:error-handler": "ng lint ngx-error-handler --fix",
    "lint:fire": "ng lint ngx-fire --fix",
    "lint:utils": "ng lint ngx-utils --fix"
